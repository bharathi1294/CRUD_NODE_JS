<div class="container">
    <h1>Edit User</h1>
        <form method="POST" action="/users/edit">
            <input type="hidden" name="id" value="<%=user._id %>">
            <div class="form-group">
                <label for="text">Name:</label>
                <input type="text" class="form-control" placeholder="Enter Name" name="name" value="<%=user.name %>">
              </div>
            <div class="form-group">
                <label for="text">Email:</label>
                <input type="text" class="form-control" placeholder="Enter email" name="email" value="<%= user.name %> ">
              </div>
              <div class="form-group">
                <label for="text">Address:</label>
                <textarea class="form-control" rows="5" name="address"><%= user.address %></textarea>
              </div>
            <div class="form-group">
                <label for="text">Mobile Number:</label>
                <input type="text" class="form-control" placeholder="Enter Mobile Number" name="mobile" value="<%= user.mobile %> ">
              </div>
              <button class="btn btn-success">Update</button>
        </form>
        <br>
        <form action="/">
          <button class="btn btn-danger">Cancel</button>
        </form>
    </div>
